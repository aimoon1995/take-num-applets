    <van-button size="mini"  bind:click="complete" data-id="{{item.uuid}}" data-openid= "{{item.openId}}" >完成</van-button>
    <van-button size="mini" bind:click="refuse" data-id="{{item.uuid}}" data-openid= "{{item.openId}}">作废</van-button>
  </view>
  </van-card>
  </block>
  <block wx:if="{{item.status != null && item.status == 3}}">
